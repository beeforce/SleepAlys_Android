<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB3BA">

    <FrameLayout
        android:id="@+id/contentContainer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="25dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp">


            <LinearLayout
                android:id="@+id/fromLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_layout"
                android:layout_marginHorizontal="45dp"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingBottom="60dp"
                android:paddingTop="45dp"
                android:backgroundTint="#fff"
                android:layout_below="@+id/profileImage"
                >

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleepy@Analyer.com"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/user_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth of Date"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    />



            </LinearLayout>


            <RelativeLayout
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/oval_button">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/user_image_white"
                    android:padding="10dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fromLogin"
                android:layout_marginTop="-30dp"

                >
                <RelativeLayout
                    android:id="@+id/editProfileButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#f39c12"
                    android:layout_marginRight="55dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/pen_edit"/>
                </RelativeLayout>

            </RelativeLayout>



            </RelativeLayout>
            <Button
                android:id="@+id/logOut"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Logout"
                android:textSize="22dp"
                android:background="@drawable/logoutbuttonstyle"
                android:textColor="#FDFDA8"
                android:textAllCaps="false"
                android:focusable="false"
                />



        </LinearLayout>
    </FrameLayout>

</RelativeLayout>