<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout
        android:id="@+id/contentContainer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:background="#FFB3BA"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/alarmclock_white"/>

                    <TextView
                        android:id="@+id/alarmTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="#fff"
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="You should sleep"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center"
                        android:textColor="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            >

                            <Button
                                android:id="@+id/suggestTime1"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="00:00"
                                android:textSize="22dp"
                                android:background="@drawable/settime_button_style"
                                android:textColor="#969FAA"
                                android:textAllCaps="false"
                                android:focusable="false"
                                />
                            <Button
                                android:id="@+id/suggestTime2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="00:00"
                                android:textSize="22dp"
                                android:background="@drawable/settime_button_style"
                                android:textColor="#969FAA"
                                android:textAllCaps="false"
                                android:focusable="false"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:layout_height="0dp">

                            <Button
                                android:id="@+id/suggestTime3"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="00:00"
                                android:textSize="22dp"
                                android:background="@drawable/settime_button_style"
                                android:textColor="#969FAA"
                                android:textAllCaps="false"
                                android:focusable="false"
                                />
                            <Button
                                android:id="@+id/suggestTime4"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="00:00"
                                android:textSize="22dp"
                                android:background="@drawable/settime_button_style"
                                android:textColor="#969FAA"
                                android:textAllCaps="false"
                                android:focusable="false"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/setAlarmclock"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@drawable/oval_button_stoke"/>


        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>